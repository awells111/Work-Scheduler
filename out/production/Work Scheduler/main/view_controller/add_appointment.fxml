<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import main.view.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.view_controller.AddAppointmentController">
    <children>
        <GridPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" />
            </rowConstraints>
            <children>
                <Label text="Type" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Label>
            <HBox alignment="CENTER_LEFT" GridPane.rowIndex="2">
               <children>
                      <Label text="Appointment Start Time" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <Label text=" (yyyy-MM-dd HH:mm)" />
               </children>
            </HBox>
                <TextField fx:id="textFieldAppointmentType" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <children>
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#handleAppointmentSave" text="Save">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#handleAppointmentCancel" text="Cancel">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.rowIndex="3">
               <children>
                  <Label text="Appointment Duration" GridPane.rowIndex="3">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <Label text=" (In Minutes)" />
               </children>
            </HBox>
            <TextField fx:id="appointmentDuration" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <DateTimePicker fx:id="appointmentDateTimePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Customer Name">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="labelCustomerName" GridPane.columnIndex="1" />
            </children>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
        </GridPane>
    </children>
</AnchorPane>
